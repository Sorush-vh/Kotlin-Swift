{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "SwiftPM: Run (package)",
      "type": "process",
      "command": "swift",
      "args": [
        "run"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "SwiftPM: Build",
      "type": "process",
      "command": "swift",
      "args": [
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "SwiftPM: Test",
      "type": "process",
      "command": "swift",
      "args": [
        "test"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}